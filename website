                <option value="general">General</option>
                <option value="common">Common</option>
                <option value="uncommon">Uncommon</option>
                <option value="rare">Rare</option>
                <option value="epic">Epic</option>
                <option value="legendary">Legendary</option>
                <option value="mystic">Mystic</option>
                <option value="iconic">Iconic</option>
            </select>
        </div>
        
        <div class="input-container">
            <label for="xp-input">XP on Card</label>
            <input type="number" id="xp-input" placeholder="Enter XP value" min="0" value="0">
        </div>
        
        <button class="btn" id="calculate-btn">Calculate</button>
        
        <div class="result" id="result"></div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const cardSelect = document.getElementById('card-options');
            const xpInput = document.getElementById('xp-input');
            const calculateBtn = document.getElementById('calculate-btn');
            const resultDiv = document.getElementById('result');

            function calculateXP() {
                const cardType = cardSelect.value;
                let xp = parseInt(xpInput.value) || 0;
                
                // Clear previous results
                resultDiv.textContent = '';
                resultDiv.className = 'result';
                
                // Don't calculate if no card type selected
                if (!cardType) {
                    console.warn("No card type selected - cannot calculate");
                    return;
                }
                
                // General card specific logic
                if (cardType === 'general') {
                    if (xp > 10) {
                        resultDiv.textContent = 'Error: Max XP for General is 10';
                        resultDiv.className = 'result error';
                        xpInput.value = 10;
                        console.error(`Invalid input: General XP cannot exceed 10 (input was ${xp})`);
                        return;
                    }
                    
                    const baseXP = 3380;
                    const xpNeeded = baseXP - xp;
                    const resultText = `You need ${xpNeeded.toLocaleString()} more XP to reach iconic`;
                    
                    resultDiv.textContent = resultText;
                    resultDiv.className = 'result success';
                    console.log(`Calculation result: ${resultText} (from ${xp} XP)`);
                    return;
                }
                
                // For other card types (shows in console only)
                console.log(`${cardType} card selected with ${xp} XP - specific calculations coming soon`);
                resultDiv.textContent = `Calculations for ${cardType} cards coming soon!`;
            }

            // Event listeners
            calculateBtn.addEventListener('click', calculateXP);
        });
    </script>
